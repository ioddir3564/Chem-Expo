      <div class="post-container">
        
      <% for (var i = arr.length-1; i >= 0; i--) { %>
        
        <div id="<%= i %>" class="overlay">
          <div id="text-box">
            <button id="<%= [i] %>" onclick="off(this.id);" style="float: right;">X</button>
            <h1 id="popup-id"><%= arr[i].title %></h1>
            <h5>By <%= arr[i].author %></h5>
            <p><%= arr[i].content %></p>
          </div>
        </div>

        <div class="Post">
          <a id="<%= [i] %>" class=pop onclick="on(this.id);" href="#">View Pop up</a>
          <a class=stay href="/external?ID=<%= arr[i].id %>">Same page</a>
          <a class=new href="/external?ID=<%= arr[i].id %>" target="_blank">New link</a>
          <h4 class="title"><%= arr[i].title %></h4>
          <img src="imgs/<%= arr[i].author %>pic.jpg" style="width: 10%; border-radius: 50%;" alt="">
          <h5>By <%= arr[i].author %></h5>
          <p style=" width: 600px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;"><%= arr[i].content %></p>
          
        </div>
        <hr style="visibility:hidden;">
 <%   } %>
      </div>
  </body>
</html>

